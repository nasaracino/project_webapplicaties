        <div class="row col-lg-12">
            <div id="Terug" class=" linkTerug col-lg-12">
                <a asp-controller="Home" asp-action="Index">< Terug</a>
            </div>
            <div class="form-group col-lg-6 registrerenLabel">
                <label asp-for="Voornaam">Voornaam</label>
            </div>
            <div class="form-group col-lg-6">
                <input type="text" class="form-control registrerenInput" asp-for="Voornaam" />
